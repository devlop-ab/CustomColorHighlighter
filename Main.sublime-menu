[
    {
        "id": "tools",
        "children": [
            {
                "id": "custom-highlighter",
                "caption": "Custom Highlighter",
                "children": [
                    {
                        "caption": "Color Highlight",
                        "command": "color_highlight",
                        "mnemonic": "C",
                        "checkbox": true
                    },
                    {
                        "caption": "Restore color scheme",
                        "command": "color_highlight_restore",
                        "mnemonic": "s"
                    },
                    {
                        "caption": "Reset Text Marker",
                        "command": "text_marker_reset",
                        "mnemonic": "R"
                    }
                ]
            }
        ]
    },
    {
        "id": "preferences",
        "caption": "Preferences",
        "mnemonic": "n",
        "children": [
            {
                "id": "package-settings",
                "caption": "Package Settings",
                "mnemonic": "P",
                "children": [
                    {
                        "caption": "Custom Highlighter Settings",
                        "command": "edit_settings",
                        "args": {
                            "base_file": "${packages}/Custom Highlighter/Custom Highlighter.sublime-settings",
                            "default": "/*\n\tCustom Highlighter user settings in here override the default\n*/\n{\n\t\"user\": {\n\t\t$0\n\t}\n}\n"
                        }
                    }
                ]
            }
        ]
    }
]
